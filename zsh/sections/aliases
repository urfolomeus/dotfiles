## functions

function mcd() {
  mkdir $1 && cd 1
}

## bash
alias :q='exit'
alias c='clear'
alias ea='nvim ~/bin/dotfiles/zsh/sections/aliases'
alias ed='nvim'
alias grep='grep --color -nr'
alias la='ls -la'
alias ll='ls -l'
alias mcd='mcd'
alias mysqlstop='mysql.server stop'
alias mysqlstart='mysql.server start'
alias nudge='source ~/.zshrc'
alias pg='postgres -D /usr/local/var/postgres'
alias pgd='nohup postgres -D /usr/local/var/postgres > /tmp/pg.log 2>&1 &'
alias redisd='nohup redis-server --daemonize yes /usr/local/etc/redis.conf > /tmp/redis.log 2>&1 &'
alias serve='python -m SimpleHTTPServer'
alias sublime='~/bin/dotfiles/sublime'

## elixir
alias imx='iex -S mix'
alias ipx='imx phoenix.server'
alias mec='mix ecto.create'
alias mem='mix ecto.migrate'
alias med='mix ecto.drop'

## javascript
alias npmls='npm ls --depth=0'
alias nrm='clear && npm run mocha --silent'
alias nrt='clear && npm run test --silent'

## testing
alias bec='clear && bundle exec cucumber'
alias berc='clear && bundle exec rspec; bundle exec cucumber'
alias berk='clear && bundle exec rake'
alias bert='clear && bundle exec rake test'
alias bifta='clear && bundle exec cucumber -f html -o tmp/cukes.html; open tmp/cukes.html; bundle exec rspec spec'
alias cbr='clear && bundle exec rspec'


## rails
alias migrate="bundle exec rake db:migrate db:test:prepare"
alias remigrate="bundle exec rake db:migrate:redo db:test:prepare"
alias unmigrate="bundle exec rake db:rollback db:test:prepare"
alias rdbfl="rake db:fixtures:load"
alias rdbm="rake db:migrate"
alias rdbr="rake db:rollback"
alias rdbs="rake db:seed"
alias rdbtp="rake db:test:prepare"

alias be="bundle exec"
alias rc="rails console"

alias rg="rails generate"
alias rgc="rails generate controller"
alias rgm="rails generate model"
alias rgmg="rails generate migration"
alias rgs="rails generate scaffold"
alias rs="rails server"


